---
import Section from "../Section.astro"

import { services } from "@cv"
---

<Section title="Nuestros Servicios">
  <ul>
    {
      services.map(({ name, description }) => {
        return (
          <li>
            <article>
              <header>
                <h3>{name}</h3>
              </header>

              <footer>
                <p>{description}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article p {
    color: #555;
    font-size: 0.95rem;
  }

  header {
    margin-bottom: 8px;
  }
</style>